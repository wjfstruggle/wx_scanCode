/**app.wxss**/
@import 'pages/template/template.wxss';
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
/* 背景图 */
#mainCode .borderBg{
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -10;
  zoom: 1;
  width: 100%;
  height: 100%;
  background: url(http://edu.bluej.cn/public/uploads/20190105/20190105193638borderBg.jpg) no-repeat;
  background-size: 100% 100%;
  overflow: hidden;
}
/* top */
#mainCode .icon_title {
  position: relative;
  top: 30rpx;
  z-index: -5;
  width: 100%;
  height: 275rpx;
  background: url(http://edu.bluej.cn/public/uploads/20190105/20190105193543icon_title.png) no-repeat;
  background-size: 100% 100%;
}
/* 扫一扫，我的邮卡 */
#mainCode .btn_scan image,
#mainCode .btn_mycard image {
  width: 100%;
}
#mainCode .btn_scan,
#mainCode .btn_mycard {
  z-index: 10;
  width: 274rpx;
  height: 74rpx;
}
/* 礼盒 */
#mainCode .mycard_icon_present {
  z-index: -15;
  width: 688rpx;
  height: 256rpx;
  background: url(http://edu.bluej.cn/public/uploads/20190106/20190106211357mycard_icon_present.png) no-repeat;
  background-size: 100% 100%;
  left: 50%;
  transform: translateX(-50%);
}